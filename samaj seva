        <span class="lang-en">Password</span>
        <span class="lang-hi">पासवर्ड</span>
      </label>
      <input type="password" id="password" name="password" placeholder="Password / पासवर्ड" required aria-required="true" />

      <button type="submit">
        <span class="lang-en">Login</span>
        <span class="lang-hi">लॉगिन</span>
      </button>
      <p class="login-message" aria-live="polite" role="alert"></p>
    </form>
  </div>
</div>

<script>
  // Navigation link active on click + scroll highlight
  const navLinks = document.querySelectorAll('nav a.nav-link');
  const sections = ['services', 'plans', 'join', 'donate'];
  navLinks.forEach(link => {
    link.addEventListener('click', e => {
      navLinks.forEach(l => l.classList.remove('active'));
      e.target.classList.add('active');
    });
  });

  // Language toggle handlers
  const langEnBtn = document.getElementById('btn-en');
  const langHiBtn = document.getElementById('btn-hi');
  const langEnElems = document.querySelectorAll('.lang-en');
  const langHiElems = document.querySelectorAll('.lang-hi');
  const loginBtn = document.getElementById('loginBtn');

  function setLanguage(lang) {
    if (lang === 'en') {
      langEnElems.forEach(e => e.classList.add('active'));
      langHiElems.forEach(e => e.classList.remove('active'));
      langEnBtn.classList.add('active');
      langEnBtn.setAttribute('aria-pressed', 'true');
      langHiBtn.classList.remove('active');
      langHiBtn.setAttribute('aria-pressed', 'false');

      // Header login button text
      loginBtn.querySelector('.lang-en').style.display = '';
      loginBtn.querySelector('.lang-hi').style.display = 'none';
    } else {
      langHiElems.forEach(e => e.classList.add('active'));
      langEnElems.forEach(e => e.classList.remove('active'));
      langHiBtn.classList.add('active');
      langHiBtn.setAttribute('aria-pressed', 'true');
      langEnBtn.classList.remove('active');
      langEnBtn.setAttribute('aria-pressed', 'false');

      // Header login button text
      loginBtn.querySelector('.lang-en').style.display = 'none';
      loginBtn.querySelector('.lang-hi').style.display = '';
    }
  }

  langEnBtn.addEventListener('click', () => setLanguage('en'));
  langHiBtn.addEventListener('click', () => setLanguage('hi'));

  setLanguage('en'); // default language English

  // Join form submission simulation
  const joinForm = document.querySelector('.join-form');
  const joinFormMessage = document.querySelector('.form-message');
  joinForm.addEventListener('submit', e => {
    e.preventDefault();
    const enMsg = 'Thank you! Your application to join our crew has been successfully submitted. We will contact you soon.';
    const hiMsg = 'धन्यवाद! आपने सफलतापूर्वक हमारे कार्य दल में जुड़ने के लिए आवेदन किया है। हम जल्द ही आपसे संपर्क करेंगे।';

    if (langEnBtn.classList.contains('active')) {
      joinFormMessage.textContent = enMsg;
    } else {
      joinFormMessage.textContent = hiMsg;
    }
    joinForm.reset();
  });

  // Copy UPI ID to clipboard on button click
  const copyButton = document.getElementById('copyButton');
  const copySuccessMsg = document.getElementById('copySuccessMsg');

  copyButton.addEventListener('click', () => {
    navigator.clipboard.writeText('12345@bank').then(() => {
      const msgEn = 'UPI ID copied! Paste it in your UPI app to donate.';
      const msgHi = 'UPI ID कॉपी हो गई है! दान करने के लिए इसे अपने UPI ऐप में पेस्ट करें।';
      copySuccessMsg.textContent = langEnBtn.classList.contains('active') ? msgEn : msgHi;

      setTimeout(() => {
        copySuccessMsg.textContent = '';
      }, 4000);
    }).catch(() => {
      const failMsgEn = 'Sorry, copy failed. Please copy manually.';
      const failMsgHi = 'क्षमा करें, कॉपी करने में समस्या हुई। कृपया मैनुअल रूप से कॉपी करें।';
      copySuccessMsg.textContent = langEnBtn.classList.contains('active') ? failMsgEn : failMsgHi;
    });
  });

  // Login modal functionality
  const loginBtnElem = document.getElementById('loginBtn');
  const modal = document.getElementById('loginModal');
  const closeBtn = modal.querySelector('.close-btn');
  const loginForm = document.getElementById('loginForm');
  const loginMessage = modal.querySelector('.login-message');

  function openModal() {
    modal.style.display = 'block';
    modal.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
    modal.querySelector('#username').focus();
  }

  function closeModal() {
    modal.style.display = 'none';
    modal.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
    loginMessage.textContent = '';
    loginForm.reset();
  }

  loginBtnElem.addEventListener('click', openModal);
  closeBtn.addEventListener('click', closeModal);
  window.addEventListener('click', e => {
    if (e.target === modal) {
      closeModal();
    }
  });

  // Simulated login submit
  loginForm.addEventListener('submit', e => {
    e.preventDefault();
    const username = loginForm.username.value.trim();
    const password = loginForm.password.value.trim();

    if (!username || !password) return;

    // Fake login success message
    const successMsgEn = \Welcome, \${username}! You have logged in successfully.\;
    const successMsgHi = \स्वागत है, \${username}! आप सफलतापूर्वक लॉगिन हो गए हैं।\;

    loginMessage.textContent = langEnBtn.classList.contains('active') ? successMsgEn : successMsgHi;

    // Optionally close modal after delay
    setTimeout(() => {
      closeModal();
    }, 2500);
  });

  // Highlight nav link on scroll for better UX
  window.addEventListener('scroll', () => {
    let scrollPos = window.scrollY || window.pageYOffset;
    for (let sectionId of sections) {
      const sectionElem = document.getElementById(sectionId);
      if (!sectionElem) continue;
      if (scrollPos >= sectionElem.offsetTop - 80 && scrollPos < sectionElem.offsetTop + sectionElem.offsetHeight) {
        navLinks.forEach(l => l.classList.remove('active'));
        const activeLink = [...navLinks].find(l => l.dataset.section === sectionId);
        if (activeLink) activeLink.classList.add('active');
        break;
      }
    }
  });
</script>
</body>
</html>
